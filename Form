<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Submission Page</title>
  <script>
    // Function to refresh the page after a submission
    function refreshPage() {
      setTimeout(function() {
        location.reload(); // Refresh the page
      }, 5000); // 5 seconds delay before refreshing
    }
  </script>
</head>
<body>
  <h1>Google Form Submission</h1>
  
  <!-- Embed the Google Form -->
  <iframe src="https://forms.gle/4xoJnuKFSG6AyfJLA" width="100%" height="800px" frameborder="0">Loadingâ€¦</iframe>
  
  <script>
    // Check if the form is submitted, based on the form's URL structure
    // Once submitted, refresh the page
    window.addEventListener('message', function(event) {
      if (event.origin === 'https://docs.google.com' && event.data.includes('formResponse')) {
        refreshPage(); // Call the refresh function after form submission
      }
    });
  </script>
</body>
</html>
